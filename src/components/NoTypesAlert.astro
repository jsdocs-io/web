---
import LucideTriangleAlert from "~icons/lucide/triangle-alert";
import type { PackagePageHandlerProps } from "../../lib/package-page-handler";

type Props = PackagePageHandlerProps & { status: "no-types" };

const {
	pkgJson: { _id },
	subpath,
} = Astro.props;
---

<div role="alert" class="alert text-balance">
	<LucideTriangleAlert class="size-6" />
	<span
		>Documentation is unavailable because package {_id} doesn't export type definitions at subpath `{
			subpath
		}`.</span
	>
</div>

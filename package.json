{
    "private": true,
    "name": "@jsdocs-io/web",
    "description": "jsDocs.io website",
    "author": "velut",
    "version": "0.1.0",
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "tsdx lint src test",
        "lint:fix": "tsdx lint src test --fix",
        "test": "jest --runInBand",
        "test:cov": "jest --runInBand --coverage",
        "test:watch": "jest --runInBand --watchAll --coverage",
        "test:ci": "jest --ci --maxWorkers=2 --coverage",
        "pre-push": "yarn && yarn lint && yarn build && yarn test:cov",
        "generate:favicon": "yarn real-favicon generate faviconDescription.json faviconData.json public",
        "analyze": "cross-env ANALYZE=true next build"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "yarn lint",
            "pre-push": "yarn pre-push"
        }
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5",
        "arrowParens": "always"
    },
    "dependencies": {
        "@braintree/sanitize-url": "^5.0.0",
        "@jsdocs-io/package-analyzer": "^1.1.0",
        "@microsoft/tsdoc": "^0.12.21",
        "anchor-js": "^4.3.0",
        "clean-deep": "^3.4.0",
        "fs-extra": "^9.0.1",
        "minio": "^7.0.16",
        "next": "10.0.2-canary.20",
        "nprogress": "^0.2.0",
        "path-to-regexp": "^6.2.0",
        "pretty-bytes": "^5.4.1",
        "prism-react-renderer": "^1.1.1",
        "prismjs": "^1.22.0",
        "query-registry": "^1.2.0",
        "react": "17.0.1",
        "react-dom": "17.0.1",
        "react-hotkeys-hook": "^2.4.0",
        "semver": "^7.3.2",
        "short-time-ago": "^1.1.1",
        "stream-json": "^1.7.1",
        "swr": "^0.3.9",
        "validate-npm-package-name": "^3.0.0"
    },
    "devDependencies": {
        "@commitlint/cli": "11.0.0",
        "@commitlint/config-conventional": "11.0.0",
        "@next/bundle-analyzer": "10.0.2",
        "@testing-library/jest-dom": "5.11.6",
        "@testing-library/react": "11.1.2",
        "@types/anchor-js": "4.2.0",
        "@types/fs-extra": "9.0.4",
        "@types/minio": "7.0.6",
        "@types/node": "14.14.8",
        "@types/nprogress": "0.2.0",
        "@types/react": "16.9.56",
        "@types/semver": "7.3.4",
        "@types/stream-json": "1.5.1",
        "@types/validate-npm-package-name": "3.0.0",
        "babel-jest": "26.6.3",
        "cli-real-favicon": "0.0.8",
        "eslint-plugin-prettier": "3.1.4",
        "husky": "4.3.0",
        "identity-obj-proxy": "3.0.0",
        "jest": "26.6.3",
        "postcss-preset-env": "6.7.0",
        "prettier": "2.1.2",
        "react-test-renderer": "17.0.1",
        "stylelint-config-recommended": "3.0.0",
        "tailwindcss": "1.9.6",
        "tailwindcss-dark-mode": "1.1.7",
        "ts-jest": "26.4.4",
        "tsdx": "0.14.1",
        "typescript": "4.0.5",
        "webpack-license-plugin": "4.1.1",
        "webpack-stats-plugin": "1.0.2",
        "webpack-visualizer-plugin": "0.1.11"
    }
}

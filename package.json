{
    "private": true,
    "name": "@jsdocs-io/web",
    "description": "jsDocs.io website",
    "author": "Edoardo Scibona (velut)",
    "version": "0.1.0",
    "scripts": {
        "dev": "next dev",
        "build": "cross-env NODE_OPTIONS='--max-old-space-size=7168' next build",
        "build:check": "tsc --noEmit",
        "start": "next start",
        "lint": "tsdx lint src test",
        "lint:fix": "tsdx lint src test --fix",
        "format": "prettier --write .",
        "test": "jest --runInBand",
        "test:cov": "jest --runInBand --coverage",
        "test:watch": "jest --runInBand --watchAll --coverage",
        "test:ci": "jest --ci --maxWorkers=2 --coverage",
        "pre-push": "yarn && yarn lint && yarn build && yarn test:cov",
        "generate:favicon": "yarn real-favicon generate faviconDescription.json faviconData.json public",
        "generate:prerendered-packages": "yarn ts-node --skip-project scripts/update-prerendered-packages.ts",
        "generate:robots-txt": "yarn ts-node --skip-project scripts/update-robots-txt.ts",
        "generate:sitemap": "yarn ts-node --skip-project scripts/update-sitemap.ts",
        "analyze": "cross-env ANALYZE=true next build",
        "prepare": "husky install"
    },
    "dependencies": {
        "@braintree/sanitize-url": "^5.0.0",
        "@jsdocs-io/extractor": "^0.0.1",
        "@microsoft/tsdoc": "^0.13.0",
        "anchor-js": "^4.3.0",
        "clean-deep": "^3.4.0",
        "filter-anything": "^2.2.1",
        "fs-extra": "^9.1.0",
        "minio": "^7.0.18",
        "new-github-issue-url": "^0.2.1",
        "next": "10.1.3",
        "nprogress": "^0.2.0",
        "path-to-regexp": "^6.2.0",
        "pretty-bytes": "^5.6.0",
        "prism-react-renderer": "^1.2.0",
        "prismjs": "^1.23.0",
        "query-registry": "^2.0.0",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-hotkeys-hook": "3.3.0",
        "semver": "^7.3.5",
        "short-time-ago": "^2.0.0",
        "stream-json": "^1.7.1",
        "swr": "^0.5.5",
        "trim-newlines": "^3.0.0",
        "use-dark-mode": "^2.3.1",
        "validate-npm-package-name": "^3.0.0"
    },
    "devDependencies": {
        "@commitlint/cli": "12.1.1",
        "@commitlint/config-conventional": "12.1.1",
        "@next/bundle-analyzer": "10.1.3",
        "@testing-library/jest-dom": "5.11.10",
        "@testing-library/react": "11.2.6",
        "@types/anchor-js": "4.2.0",
        "@types/fs-extra": "9.0.10",
        "@types/minio": "7.0.7",
        "@types/node": "14.14.37",
        "@types/nprogress": "0.2.0",
        "@types/proper-url-join": "2.1.0",
        "@types/react": "17.0.3",
        "@types/semver": "7.3.4",
        "@types/stream-json": "1.5.1",
        "@types/validate-npm-package-name": "3.0.2",
        "autoprefixer": "10.2.5",
        "babel-jest": "26.6.3",
        "cli-real-favicon": "0.0.8",
        "cross-env": "7.0.3",
        "eslint-plugin-prettier": "3.3.1",
        "got": "11.8.2",
        "husky": "6.0.0",
        "identity-obj-proxy": "3.0.0",
        "jest": "26.6.3",
        "postcss": "8.2.10",
        "prettier": "2.2.1",
        "proper-url-join": "2.1.1",
        "react-test-renderer": "17.0.2",
        "stylelint-config-recommended": "4.0.0",
        "tailwindcss": "2.1.1",
        "ts-dedent": "2.1.1",
        "ts-jest": "26.5.4",
        "ts-node": "9.1.1",
        "tsdx": "0.14.1",
        "typescript": "4.2.4",
        "webpack-license-plugin": "4.1.2",
        "webpack-stats-plugin": "1.0.3",
        "webpack-visualizer-plugin2": "1.0.0",
        "xml-formatter": "2.4.0"
    }
}

{
    "private": true,
    "name": "@jsdocs-io/web",
    "description": "jsDocs.io website",
    "author": "velut",
    "version": "0.1.0",
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "tsdx lint src",
        "lint:fix": "tsdx lint src --fix",
        "pre-push": "yarn && yarn lint && yarn build"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "yarn lint",
            "pre-push": "yarn pre-push"
        }
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5",
        "arrowParens": "always"
    },
    "dependencies": {
        "anchor-js": "^4.2.2",
        "next": "9.5.2",
        "query-registry": "^1.2.0",
        "react": "16.13.1",
        "react-dom": "16.13.1",
        "short-time-ago": "^1.1.1"
    },
    "devDependencies": {
        "@commitlint/cli": "9.1.2",
        "@commitlint/config-conventional": "9.1.2",
        "@tailwindcss/typography": "0.2.0",
        "@types/anchor-js": "4.2.0",
        "@types/node": "14.6.2",
        "@types/react": "16.9.49",
        "eslint-plugin-prettier": "3.1.4",
        "husky": "4.2.5",
        "postcss-preset-env": "6.7.0",
        "prettier": "2.1.1",
        "stylelint-config-recommended": "3.0.0",
        "tailwindcss": "1.7.6",
        "tailwindcss-dark-mode": "1.1.6",
        "tsdx": "0.13.3",
        "typescript": "4.0.2"
    }
}
